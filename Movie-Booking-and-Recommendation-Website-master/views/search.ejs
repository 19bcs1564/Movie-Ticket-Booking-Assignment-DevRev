
<%include header1.ejs%>
<div class="container">
	<div class="row">
	<div class="col-lg-12">
		<div class="jumbotron">
			<h1>Search page</h1>
			<div>
				<h2>Search for movies here.</h2>

			</div>
		</div>

		<div>
			<form class="form-vertical" method="POST" action="/search">
				<input class="form-group" type="text" name="name" placeholder="movie-name" required="true">
				<button class="btn btn-large btn-default">Search</button>
			</form>
			
		</div>

	</div>


	<div class="back">
				<%movies.forEach(function(movie){ if(movie){%>
			<div class="col-md-4">
				<div class="thumbnail">
			
					<img style="width: 100%" src="<%=movie.img%>">
					<div class="caption">

						<h5 class="card-title"><%=movie.name%></h5>
						
						<a class="btn btn-primary" href="/home/<%=movie._id%>">More Info</a>
						<a class="btn btn-success" href="/book/<%=movie._id%>">Book Now</a>
					</div>
			
			
				
				</div>
			</div>
			<%} else{%>
				<div class="col-lg-12">
					<div class="jumbotron">
						<h2>No Result Found</h2>
			
				</div>
							<%}
		}); %>
				
	</div>
	
	</div>

</div>

	

		
	


<%include footer.ejs%>